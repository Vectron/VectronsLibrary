<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:VectronsLibrary.Wpf.Controls">

    <Style
        x:Key="{x:Type controls:ColorSelector}"
        BasedOn="{StaticResource {x:Type ComboBox}}"
        TargetType="{x:Type controls:ColorSelector}">
        <Setter Property="ItemTemplate">
            <Setter.Value>
                <DataTemplate DataType="controls:NamedColor">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            Width="20"
                            Height="20"
                            Margin="5">
                            <TextBlock.Background>
                                <SolidColorBrush Color="{Binding Color, Mode=OneWay}" />
                            </TextBlock.Background>
                        </TextBlock>
                        <TextBlock Margin="5" Text="{Binding Name, Mode=OneWay}" />
                    </StackPanel>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>