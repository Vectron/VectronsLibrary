<UserControl
    x:Class="VectronsLibrary.Wpf.Controlls.LabelledNumTextBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:VectronsLibrary.Wpf.Controlls"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="Auto"
                SharedSizeGroup="Labels" />
            <ColumnDefinition
                Width="*" />
        </Grid.ColumnDefinitions>
        <TextBlock
            Grid.Column="0"
            Margin="3,0,3,0"
            VerticalAlignment="Center"
            Text="{Binding Label, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}" />
        <local:NumericTextBox
            Grid.Column="1"
            AllowDecimal="{Binding AllowDecimal, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}"
            AllowNegative="{Binding AllowNegative, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}"
            Text="{Binding Text, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}" />
    </Grid>
</UserControl>